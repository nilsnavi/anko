# Backend Environment Variables

# ========================
# Server Configuration
# ========================

# Server Port
PORT=5000

# Node Environment (development|production|test)
NODE_ENV=development

# ========================
# Database Configuration
# ========================

# MongoDB Connection String
# Local: mongodb://localhost:27017/accounting_ecosystem
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/dbname
MONGODB_URI=mongodb://localhost:27017/accounting_ecosystem

# ========================
# Security & Authentication
# ========================

# JWT Secret - ОБЯЗАТЕЛЬНО измените в production!
# Используйте сложный ключ длиной минимум 32 символа
# Генерация: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-very-secure-secret-key-change-this-in-production

# JWT Access Token Lifetime (например: 15m, 1h, 24h)
JWT_ACCESS_TOKEN_EXPIRY=24h

# JWT Refresh Token Lifetime (например: 7d, 30d)
JWT_REFRESH_TOKEN_EXPIRY=7d

# ========================
# CORS Configuration
# ========================

# CORS Origin - укажите URL вашего фронтенда
# Development: http://localhost:5173
# Production: https://your-frontend-domain.com
# Multiple origins: http://localhost:5173,https://your-domain.com
CORS_ORIGIN=http://localhost:5173

# ========================
# File Upload Settings
# ========================

# Директория для загрузки файлов
UPLOAD_DIR=./uploads

# Максимальный размер файла в байтах (5MB = 5242880)
MAX_FILE_SIZE=5242880

# Разрешенные типы файлов (через запятую)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ========================
# Rate Limiting
# ========================

# Максимальное количество запросов в окне времени
RATE_LIMIT_MAX=100

# Окно времени в минутах
RATE_LIMIT_WINDOW=15

# ========================
# Email Configuration (опционально)
# ========================

# SMTP Server
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@ecosystem-pbs.ru

# ========================
# Logging
# ========================

# Уровень логирования (error|warn|info|debug)
LOG_LEVEL=info

# ========================
# Additional Settings
# ========================

# Base URL вашего API (для генерации ссылок)
API_BASE_URL=http://localhost:5000
